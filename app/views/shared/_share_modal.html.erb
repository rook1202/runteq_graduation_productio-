<div class="modal fade" id="<%= modal_id %>" tabindex="-1" aria-labelledby="<%= modal_label_id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= modal_label_id %>"><%= modal_title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>
      <div class="modal-body">
        <p><%= modal_message %></p>

        <!-- 共有方法アイコン -->
        <div class="d-flex justify-content-center my-3">
          <!-- URLコピーアイコン -->
          <i class="fa-regular fa-clipboard share-icon" 
             onclick="handleShareClick('コピー', '<%= create_token_path %>'); return false;" 
             style="cursor: pointer; font-size: 1.5rem;" 
             title="コピー"></i>

          <!-- メール共有アイコン -->
          <i class="fa-regular fa-envelope ms-5 share-icon" 
             onclick="handleShareClick('メール', '<%= create_token_path %>'); return false;" 
             style="cursor: pointer; font-size: 1.5rem;" 
             title="メール"></i>

          <!-- LINE共有アイコン -->
          <i class="fa-brands fa-line ms-5 share-icon" 
             onclick="handleShareClick('LINE', '<%= create_token_path %>'); return false;" 
             style="cursor: pointer; font-size: 1.5rem;" 
             title="LINE"></i>

          <!-- QRコード共有アイコン -->
          <i class="fa-solid fa-qrcode ms-5 share-icon" 
             onclick="handleShareClick('QRコード', '<%= create_token_path %>'); return false;"  
             style="cursor: pointer; font-size: 1.5rem;" 
             title="QRコード"></i>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
      </div>
    </div>
  </div>
</div>

