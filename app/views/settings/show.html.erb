<% @page_title = "設定" %>

<div class="container mt-5">
  <div class="row">
    <div class="col-11 col-md-6 mx-auto">
        <h4>共有中のユーザー</h4>
        <hr>
        <% if @shared_users.any? %>
        <%= render "unshare_modal", shared_users: @shared_users %>
        <% else %>
        <p>共有しているユーザーはいません。</p>
        <% end %>

        <h4>ログイン設定</h4>
        <hr>
        <div class="col-12 px-3 pt-3 pb-2 my-3">
        <%= link_to 'ユーザー名変更', name_change_settings_path, class: 'link-custom d-block' %>
        <%= link_to 'パスワード変更', new_password_reset_path, class: 'link-custom d-block pt-2' %>
        <%= link_to 'メールアドレス変更', new_email_change_path, class: 'link-custom d-block pt-2' %>
        </div>

        <h4>サポート</h4>
        <hr>
        <div class="col-12 px-3 pt-3 pb-2 my-3 mx-auto">
        <%= link_to 'お知らせ', news_settings_path, class: 'link-custom d-block' %>
        <%= link_to 'お問い合わせ', '', class: 'link-custom d-block pt-2' %>
        <%= link_to '利用規約', terms_of_use_settings_path, class: 'link-custom d-block pt-2' %>
        <%= link_to 'プライバシーポリシー', privacy_policy_settings_path, class: 'link-custom d-block pt-2' %>
        </div>

        <h4>退会</h4>
        <hr>
        <div class="col-12 px-3 pt-3 pb-2 my-3 mx-auto">
        <p>ユーザー情報を削除する</p>
        </div>

    </div>
  </div>
</div>
