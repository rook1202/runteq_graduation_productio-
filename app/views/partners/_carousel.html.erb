<!-- 画像リンク -->
<a href="#" data-bs-toggle="modal" data-bs-target="#imageModal-medication-<%= medication.id %>" class="link-custom" style="font-size: 0.80em; margin: 0;">
  >>画像で確認する
</a>

<!-- モーダル -->
<div class="modal fade" id="imageModal-medication-<%= medication.id %>" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="imageModalLabel">おくすりの置き場所</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="carouselExampleIndicators-<%= medication.id %>" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <% medication.images.each_with_index do |image, index| %>
              <button type="button" data-bs-target="#carouselExampleIndicators-<%= medication.id %>" data-bs-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>" aria-current="true" aria-label="Slide <%= index + 1 %>"></button>
            <% end %>
          </div>

          <div class="carousel-inner">
            <% medication.images.each_with_index do |image, index| %>
              <div class="carousel-item <%= "active" if index == 0 %>">
                <img src="<%= url_for(image) %>" class="d-block w-100" alt="ごはんの置き場所">
              </div>
            <% end %>
          </div>

          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators-<%= medication.id %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators-<%= medication.id %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>