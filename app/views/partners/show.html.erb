<% @page_title = @partner.name %>

<div class="container mt-5">
  <div class="row">
    <div class="col-11 col-md-6 mx-auto">
        <h4>Main</h4>
        <div class="row">
            <div class="col-6 mb-3">
            <%= image_tag 'pet_omocha_inu.png', class: "custom-show-img", alt: "default_image" %>
            </div>
            <div class="col-6 mb-3 custom-show-text">
            <div class="mb-3">
                <h4 style="display: inline;"><%= @partner.name %></h4>
                <%= link_to edit_partner_path(@partner), class: 'link-custom', style: "display: inline; margin-left: 8px;" do %>
                    <i class="fa-solid fa-pen"></i>
                <% end %>
            </div>

            <p><%= @partner.animal_type %>・<%= @partner.breed %></p>
            <p>性別：<%= @partner.gender_in_japanese %></p>
            <p>年齢：<%= @partner.age %>歳</p>
            <p>体重：<%= @partner.weight %></p>
            <p style="font-size: 0.80em;">最終更新日（<%= @partner.updated_at.strftime('%Y/%m/%d') %>）</p>
            </div> 
        </div>

        <h4 style="display: inline;">ごはん</h4>
                <%= link_to edit_partner_food_path(@partner, @food), class: 'link-custom', style: "display: inline; margin-left: 8px;" do %>
                    <i class="fa-solid fa-pen"></i>
                <% end %>
        <div class="border col-12 rounded px-3 pt-3 pb-2 my-3 mx-auto">       
            <%= render 'food', food: @food, remainders: @food_remainders  %>
        </div>

        <h4 style="display: inline;">さんぽ</h4>
                <%= link_to edit_partner_walk_path(@partner, @walk), class: 'link-custom', style: "display: inline; margin-left: 8px;" do %>
                    <i class="fa-solid fa-pen"></i>
                <% end %>
        <div class="border col-12 rounded px-3 pt-3 pb-2 my-3 mx-auto">
            <%= render 'walk', walk: @walk, remainders: @walk_remainders %>
        </div>

        <h4 style="display: inline;">おくすり</h4>
                <%= link_to edit_partner_medication_path(@partner, @medication), class: 'link-custom', style: "display: inline; margin-left: 8px;" do %>
                    <i class="fa-solid fa-pen"></i>
                <% end %>
        <div class="border col-12 rounded px-3 pt-3 pb-2 my-3 mx-auto">
            <%= render 'medicine', medication: @medication, remainders: @medication_remainders  %>            
        <div>

    </div>
  </div>
</div>