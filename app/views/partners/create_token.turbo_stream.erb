  <% if params[:id].present? %>
    <%= turbo_stream.after "confirmationModal" do %>
      <script>
      var modal = bootstrap.Modal.getInstance(document.getElementById('confirmationModal'));
      modal.hide();
      </script>
    <% end %>
  <% else %>
    <%= turbo_stream.after "confirmationModalAll" do %>
      <script>
        var modal = bootstrap.Modal.getInstance(document.getElementById('confirmationModalAll'));
        modal.hide();
      </script>
    <% end %>
  <% end %>