<% @page_title = "パートナーリスト" %>

<div class="container pt-3">
  <div class="row">
    <div class="col-11 col-md-8 mx-auto">

      <div class="mb-4">
        <%= link_to new_partner_path, class: 'link-custom' do %>
        <i class="fa-solid fa-angles-right"></i> <span>パートナー追加</span>
        <% end %>
      </div>

      <div id="tooltip-container" class="tooltip-container">
        <div class="tooltip" id="tooltip-1" style="opacity: <%= @show_tutorial ? '0' : '1' %>;">
          <p>ここではあなたのペットを一覧で表示します！</p>
          <button id="next-tooltip" class="tooltip-btn">次へ</button>
        </div>
      </div>

        <div class="row">
        <% @partners.each do |partner| %>
          <div class="col-12 col-md-6 mb-4">
            <%= render partial: "partner", locals: { partner: partner } %>
          </div>
        <% end %>
        </div>
      <hr>
        <%= render "sharemessage_all", partners: @partners %>

    </div>
  </div>
</div>