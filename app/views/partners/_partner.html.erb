<div class="card">
        <% if partner.image.attached? %>
            <%= image_tag partner.image, class: "card-img-top", alt: partner.name %>
        <% else %>
            <%= image_tag 'noimage.png', class: "card-img-top", alt: "default_image" %>
        <% end %>
            <div class="card-body">
                <h4 class="card-title">
                <%= link_to partner.name, partner_path(partner), class: 'link-custom' %>
                </h4>

                <h6 class="card-subtitle mb-2 text-muted">owner: <%= partner.owner.name %></h6>
                <p class="card-text">
                    <%= partner.animal_type %>
                </p>
            </div>
</div>