<div class="container">
  <div class="row">
    <div class="col-11 col-md-8 mx-auto">
      <h1 class="my-4 text-center">ペット手帳（仮）</h1>
      <div class="border col-12 rounded">
        <div class="col-10 mt-3 mb-3 mx-auto">
          <%= form_with url: login_path, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :email, 'メールアドレス', class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control', id: 'email', placeholder: 'メールアドレスを入力' %>
            </div>
            
            <div class="mb-4">
              <%= form.label :password, 'パスワード', class: 'form-label' %>
              <%= form.password_field :password, class: 'form-control', id: 'password', placeholder: 'パスワードを入力' %>
            </div>
            
            <div class="mb-3">
              <%= form.submit 'ログイン', class: 'btn btn-custom w-100' %>
            </div>
          <% end %>
            
            <div class="mb-5">
              <%= link_to '新規登録', new_user_path, class: 'link-custom' %>
            </div>

        </div>
      </div>
    </div>
  </div>
</div>
